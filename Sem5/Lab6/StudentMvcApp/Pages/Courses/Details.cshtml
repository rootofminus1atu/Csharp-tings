@page
@model StudentMvcApp.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Department)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Lecturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Lecturer)
        </dd>
    </dl>
    <h4>Students in Course</h4>
    <ul>
        @foreach (var student in Model.Course.Students)
        {
            <li>
                <a asp-page="../Students/Details" asp-route-id="@student.Id">@student.Name</a>
            </li>
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
