@page
@model RADLab3Solution.Pages.Authors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>
</div>

<hr />
<h6>Books published by @Html.DisplayFor(model => model.Author.Name)</h6>
<ul>
    @foreach (var item in Model.Author.Books)
    {
        <li>@Html.Raw(item.Title)</li>
    }
</ul>
<hr />


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Author.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
